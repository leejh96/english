<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>나의 단어장</title>
</head>
<body>
    <div class="wordSave">
        <table border="1">
            <thead>
                <tr>
                    <th>단어</th>
                    <th>뜻</th>
                </tr>
            </thead>
            <tbody>
                <% words.forEach(function(i){ %>
                    <tr>
                        <td><%= i.dataValues.spelling %></td>
                        <td><%= i.dataValues.meaning %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <form action="/myword" method="POST">
            <p>단어 : <input type="text" name="spelling"></p>
            <p>뜻  : <input type="text" name="meaning"></p>
            <p><button type ="submit">저장하기</button><p>
        </form>
    </div>
</body>
</html>